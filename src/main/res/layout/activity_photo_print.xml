<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.PhotoPrintActivity">

    <RelativeLayout
        android:id="@+id/rl_top_photo_print"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="top">

        <ImageView
            android:id="@+id/iv_back_photo_print"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/tv_back_photo_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:text="Back"
            android:layout_toRightOf="@+id/iv_back_photo_print"
            android:layout_centerVertical="true"
            android:fontFamily="@font/sf_ui_display_regular"
            />
        <TextView
            android:id="@+id/tv_titile_photo_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="PHOTO PRINTS"
            android:textSize="16dp"
            android:fontFamily="@font/sf_ui_display_semibold"
            android:textColor="#222222"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_photo_print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rl_top_photo_print"
        android:layout_marginTop="10dp">

    </android.support.v7.widget.RecyclerView>




</androidx.constraintlayout.widget.ConstraintLayout>