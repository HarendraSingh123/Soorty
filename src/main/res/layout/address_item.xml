<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11.5dp">

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/margin16"
                android:src="@drawable/demo_icon"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ronnie Jordan"
                android:fontFamily="@font/sf_ui_display_medium"
                android:layout_marginLeft="11.5dp"
                android:layout_toRightOf="@+id/iv_location"
                android:textColor="@color/colorBlack_b4"
                android:textSize="@dimen/text_size16" />

            <TextView
                android:layout_below="@+id/tv_name"
                android:id="@+id/tv_address_street"
                android:layout_width="wrap_content"
                android:fontFamily="@font/regular"
                android:layout_marginLeft="11.5dp"
                android:layout_toRightOf="@+id/iv_location"
                android:text="Flat 325, Arjaan Rotana, Media City,"
                android:textColor="@color/colorGrey_b1"
                android:textSize="@dimen/text_size13"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/tv_address_street"
                android:id="@+id/tv_address_state"
                android:layout_width="wrap_content"
                android:layout_marginLeft="11.5dp"
                android:fontFamily="@font/regular"
                android:layout_toRightOf="@+id/iv_location"
                android:text="Dubai"
                android:textColor="@color/colorGrey_b1"
                android:textSize="@dimen/text_size13"
                android:layout_height="wrap_content" />

            <!--need font proxima nova-->
            <TextView
                android:layout_below="@+id/tv_address_state"
                android:id="@+id/tv_mob"
                android:layout_width="wrap_content"
                android:layout_marginLeft="11.5dp"
                android:layout_marginTop="@dimen/margin10"
                android:fontFamily="@font/regular"
                android:layout_toRightOf="@+id/iv_location"
                android:text="91 999999999999"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_size14"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
