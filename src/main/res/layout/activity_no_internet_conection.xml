<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NoInternetConectionActivity">

    <ImageView

        android:id="@+id/image_no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_internet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/tv_internet_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO INTERNET CONNECTION"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_no_internet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintVertical_bias="0.70"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/sf_ui_display_regular"
        />

    <View

        android:id="@+id/horizontal_sep_view_not_interne"
        android:layout_width="150dp"
        android:layout_height="6dp"
        android:text="NO INTERNET CONNECTION"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_internet_lost"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintVertical_bias="0.70"
        android:background="@color/colorAccent"
        android:layout_marginTop="10dp"
        >


    </View>

    <TextView
        android:id="@+id/tv_looks_internet_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looks like connection has lost"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_sep_view_not_interne"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintVertical_bias="0.80"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sf_ui_display_regular"
        android:textColor="@color/colorAccent" />


    <Button
        android:id="@+id/btn_ok_no_internet"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:text="Ok"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_looks_internet_lost"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintVertical_bias="0.80"
        android:layout_marginTop="20dp"
        app:cornerRadius="25dp"
        android:fontFamily="@font/sf_ui_display_semibold"
        android:onClick="onClick" />




</androidx.constraintlayout.widget.ConstraintLayout>