<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="208dp"
    android:layout_marginBottom="20dp"
    >

    <RelativeLayout

        android:id="@+id/rl_top__card_view_my_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_odrer_id_my_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:text="Order No #125847965"
            android:textSize="@dimen/text_size16"
            android:textColor="#222222"
            android:fontFamily="@font/sf_ui_display_semibold" />

        <TextView
            android:id="@+id/tv_order_date_time_my_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_odrer_id_my_orders"
            android:layout_marginLeft="@dimen/margin15"
            android:text="08 Aug 2018 @ 10:40"
            android:fontFamily="@font/sf_ui_display_regular" />
        <View

            android:id="@+id/view_sep_top_my_orders"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_view_line"
            android:layout_below="@+id/tv_order_date_time_my_orders"
            android:layout_marginTop="11dp"

            ></View>


        <ImageView
            android:id="@+id/iv_order_my_orders"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/view_sep_top_my_orders"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:src="@drawable/intro_screen_4_bg"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_item_name_my_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="94dp"
            android:layout_marginLeft="140dp"
            android:text="Photo Print"
            android:textSize="@dimen/text_size16"
            android:fontFamily="@font/sf_ui_display_semibold"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/tv_status_of_delivery_my_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELIVERED ON :"
            android:textSize="@dimen/text_size13"
            android:fontFamily="@font/sf_ui_display_regular"
            android:layout_below="@+id/tv_item_name_my_orders"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="140dp"
            android:textColor="#2962FF" />

        <TextView
            android:id="@+id/tv_date_delivery_status_my_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon, 12 Aug 2018"
            android:textSize="@dimen/text_size13"
            android:layout_below="@+id/tv_status_of_delivery_my_orders"
            android:layout_marginLeft="140dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>