<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SubcategoryActivity">




   <RelativeLayout
       android:id="@+id/rl_top_subcategory"
       android:layout_width="match_parent"
       android:layout_height="63dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:gravity="top">
      <ImageView
          android:id="@+id/iv_back_subcategory"
          android:layout_width="40dp"
          android:layout_height="25dp"
          android:layout_alignParentLeft="true"
          android:src="@drawable/back"
          android:onClick="onClick"
          android:layout_centerVertical="true" />

      <TextView
          android:id="@+id/tv_back_subcategory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Back"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/iv_back_subcategory"
          android:fontFamily="@font/sf_ui_display_regular"
          android:textColor="#222222"
          android:textSize="14dp"
          />

      <TextView
          android:id="@+id/tv_title_sucategory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="COMMERCIAL"
          android:layout_centerVertical="true"
          android:layout_centerInParent="true"
          android:textSize="16dp"
          android:fontFamily="@font/sf_ui_display_semibold"
          android:textColor="#222222"

          />

      <View
          android:id="@+id/top_view_sep_subcategory"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@color/gray_view_line"
          android:layout_alignParentBottom="true"
          ></View>

   </RelativeLayout>

   <android.support.v7.widget.RecyclerView

       android:id="@+id/rv_subcategory"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/rl_top_subcategory"
       app:layout_constraintLeft_toLeftOf="parent">






   </android.support.v7.widget.RecyclerView>






</androidx.constraintlayout.widget.ConstraintLayout>